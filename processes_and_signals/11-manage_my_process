#!/usr/bin/env bash
# File: 11-manage_my_process

PIDFILE="/var/run/my_process.pid"
SCRIPT="/path/to/manage_my_process"   # Replace with the correct path if needed

case "$1" in
    start)
        $SCRIPT &
        echo $! > "$PIDFILE"
        echo "manage_my_process started"
        ;;
    stop)
        if [ -f "$PIDFILE" ]; then
            kill "$(cat "$PIDFILE")"
            rm -f "$PIDFILE"
        fi
        echo "manage_my_process stopped"
        ;;
    restart)
        # Stop silently
        if [ -f "$PIDFILE" ]; then
            kill "$(cat "$PIDFILE")"
            rm -f "$PIDFILE"
        fi
        # Start again
        $SCRIPT &
        echo $! > "$PIDFILE"
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac
