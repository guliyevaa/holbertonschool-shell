#!/usr/bin/env bash
PIDFILE="/var/run/myscript.pid"

# Save the PID of this script
echo $$ > "$PIDFILE"

# Handler for SIGINT (Ctrl+C)
handle_sigint() {
    echo "Y U no love me?!"
}

# Handler for SIGTERM (pkill or kill)
handle_sigterm() {
    echo "I hate the kill command"
}

# Handler for SIGQUIT or SIGTERM to clean up and exit
cleanup() {
    rm -f "$PIDFILE"
    exit 0
}

# Trap signals
trap handle_sigint SIGINT
trap handle_sigterm SIGTERM
trap cleanup SIGQUIT SIGTERM

# Infinite loop printing the message
while true; do
    echo "To infinity and beyond"
    sleep 1
done
