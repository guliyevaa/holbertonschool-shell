#!/usr/bin/env bash
# Create a PID file
echo $$ > /var/run/myscript.pid

# Handle SIGTERM: print message, remove PID file, terminate
trap "echo 'I hate the kill command'; rm -f /var/run/myscript.pid; exit" SIGTERM

# Handle SIGINT (Ctrl+C): print message only
trap "echo 'Y U no love me?!'" SIGINT

# Handle SIGQUIT (Ctrl+\): remove PID file and terminate
trap "rm -f /var/run/myscript.pid; exit" SIGQUIT

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
